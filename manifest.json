{
    "version": "1.0.0",
    "manifest_version": 3,
    "name": "Smart Suggestions",
    "description": "This is a Chrome extension built to use Google Gemini for Smart suggestions",
    "side_panel": {
        "default_path": "js/index.html"
    },
    "permissions": ["sidePanel", "activeTab", "storage"],
    "background": {
        "service_worker": "js/background.js"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["js/content.js"]
    }],  
    "action": {
        "default_title": "Smart Suggestions",
        "default_icon": "js/images/sprout.png"
    }
}